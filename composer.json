{
	"name": "pvc/http",
	"description": "Code that handles querystrings, urls, and mime types",
	"type": "project",
	"authors": [
		{
			"name": "Doug Wilbourne",
			"email": "dougwilbourne@gmail.com"
		}
	],
	"license": "MIT",
	"config": {
		"php": "8.3"
	},
	"autoload": {
		"psr-4": {
			"pvc\\http\\": "src/",
			"pvcTests\\http\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"require": {
		"ext-ctype": "*",
		"ext-curl": "*",
		"ext-fileinfo": "*",
		"ext-mbstring": "*",
		"psr/simple-cache": "*",
		"pvc/interfaces": "dev-removedefs",
		"pvc/err": "*",
		"pvc/parser": "*",
		"pvc/storage": "*",
		"pvc/validator": "*",
		"pvc/filtervar": "*",
		"guzzlehttp/guzzle": "*",
		"symfony/cache": "^7"
    },
	"require-dev": {
		"phpunit/phpunit": "^9",
		"squizlabs/php_codesniffer": "*",
		"friendsofphp/php-cs-fixer": "*",
		"phpstan/phpstan": "*",
		"ext-uopz": "*",
		"mikey179/vfsstream": "*"
	}
}